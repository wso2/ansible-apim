[Unit]
Description=WSO2 API Manager - Gateway profile
After=network.target

[Service]
ExecStart={{ install_path }}/bin/wso2server.sh --optimize -Dprofile=gateway-worker -DworkerNode=true start
ExecStop={{ install_path }}/bin/wso2server.sh stop
ExecRestart={{ install_path }}/bin/wso2server.sh restart
PIDFile={{ install_path }}/wso2carbon.pid
User={{ wso2_user }}
Group={{ wso2_group }}
Type=forking
Restart=on-failure
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
