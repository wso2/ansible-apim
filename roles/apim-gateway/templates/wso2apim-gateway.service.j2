[Unit]
Description=WSO2 API Manager - Gateway profile
After=network.target

[Service]
{% if ansible_env.JAVA_HOME is defined %}
Environment=JAVA_HOME="{{ ansible_env.JAVA_HOME }}"
{% endif %}
{% if gw_memory %}
Environment=JVM_MEM_OPTS="{{ gw_memory }}"
{% endif %}
ExecStart={{ carbon_home }}/bin/api-manager.sh -Dprofile=gateway-worker start
ExecStop={{ carbon_home }}/bin/api-manager.sh stop
ExecReload={{ carbon_home }}/bin/api-manager.sh restart
PIDFile={{ carbon_home }}/wso2carbon.pid
User={{ wso2_user }}
Group={{ wso2_group }}
Type=forking
Restart=on-failure
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
